#include <stdio.h>

int main() {
    int t;
    if (scanf("%d", &t) != 1) return 0;
    while (t--) {
        long long n, m, s;
        scanf("%lld %lld %lld", &n, &m, &s);
        long long last = (s + m - 1) % n;
        if (last == 0) last = n;
        printf("%lld\n", last);
    }
    return 0;
}
