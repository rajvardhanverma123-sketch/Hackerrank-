#include <stdio.h>
#include <stdlib.h>

int cmp(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

int toys(int w_count, int* w) {
    qsort(w, w_count, sizeof(int), cmp);
    int count = 0, i = 0;
    while (i < w_count) {
        int minWeight = w[i];
        count++;
        while (i < w_count && w[i] <= minWeight + 4) {
            i++;
        }
    }
    return count;
}

int main() {
    int n;
    scanf("%d", &n);
    int* w = malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) {
        scanf("%d", &w[i]);
    }
    int result = toys(n, w);
    printf("%d\n", result);
    free(w);
    return 0;
}
