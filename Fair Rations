char* fairRations(int B_count, int* B) {
    int loaves = 0;
    static char result[16];
    for (int i = 0; i < B_count - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;
            B[i+1]++;
            loaves += 2;
        }
    }
    if (B[B_count-1] % 2 != 0)
        return "NO";
    sprintf(result, "%d", loaves);
    returnÂ result;
}
