#define MOD 1000000007

int substrings(char* n) {
    long long total = 0;
    long long prev = 0; // f[i-1]
    int len = strlen(n);

    for (int i = 0; i < len; i++) {
        int digit = n[i] - '0';
        long long current = (((long long)(i + 1) * digit) % MOD + ((prev * 10) % MOD)) % MOD;
        total = (total + current) % MOD;
        prev = current;
    }

    return (int)total;
}
